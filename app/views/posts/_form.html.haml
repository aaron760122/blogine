= javascript_include_tag 'mdeditor'
= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :ident
    = f.text_field :ident
  .field
    = f.label :content
    = f.text_area :content
  .field
    %label Tags
    = text_field_tag :tags
  .field
    = f.label :column_id
    = f.number_field :column_id
  .field
    = f.label :status
    = f.number_field :status
  .actions
    = f.submit 'Save'

:javascript
  $("#post_content").markdown({
    language: 'zh',
    fullscreen: {
        enable: true
    },
    resize: 'vertical',
    localStorage: 'md',
    hiddenButtons: ['cmdEmoji'],
  });