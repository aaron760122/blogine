%ol.breadcrumb
  %li
    %i.fa.fa-dashboard.fa-prl5
    = link_to admin_root_path do
      管理首页
  %li.active
    %i.fa.fa-columns.fa-prl5
    分类管理
#admin-column-index
  .table-responsive
    %table.table.table-bordered.table-hover.table-striped
      %thead
        %tr
          %th ID
          %th 名称
          %th 标识符
          %th 文章数
          %th 创建时间
          %th 操作
      %tbody.columns-content
        - @columns.each do |c|
          %tr
            %td
              = c.id
            %td{style:'width: 25%'}
              = c.name
            %td{style:'width: 25%'}
              = c.ident
            %td
              = c.posts_count rescue 0
            %td
              = c.created_at.strftime("%x %H:%M")
            %td
              .fa.fa-pencil-square.fa-prl5.edit-column
              .fa.fa-trash.delete-column
        %tr.columns-create-field
          = form_for [:admin, @column], remote: true do |f|
            %td
            %td
              = f.text_field :name, class: 'form-control', placeholder: '如: Web开发'
            %td
              = f.text_field :ident, class: 'form-control', placeholder: '如: web_dev'
            %td{colspan: 3}
              = f.submit '创建', class: 'btn btn-success margin-right-5'
              .btn.btn-default.cancle-create-field
                取消
  %button.btn.btn-sm.btn-success.add-columns-btn
    .fa.fa-plus.fa-pr5
    添加分类

:coffee
  $('.add-columns-btn').click ->
    $('.add-columns-btn').hide()
    $('.columns-create-field').show()
    return
  $('.cancle-create-field').click ->
    $('.add-columns-btn').show()
    $('.columns-create-field').hide()
    return