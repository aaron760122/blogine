= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :html_content
    = f.text_area :html_content
  .field
    = f.label :creator_name
    = f.text_field :creator_name
  .field
    = f.label :creator_email
    = f.text_field :creator_email
  .field
    = f.label :creator_site
    = f.text_field :creator_site
  .field
    = f.label :post_id
    = f.number_field :post_id
  .field
    = f.label :status
    = f.number_field :status
  .actions
    = f.submit 'Save'
